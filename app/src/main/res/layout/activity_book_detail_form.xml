<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:padding="15dp"
    tools:context=".BookDetailForm">

    <ImageView
        android:id="@+id/imvDetailCover"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_launcher_background"
        />

    <TextView
        android:id="@+id/txvBookDetailName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textStyle="bold"
        tools:text="Name"
        android:textSize="30sp"
        />

    <TextView
        android:id="@+id/txvBookDetailAuthor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        tools:text="Author"
        android:textSize="20sp"
        />

    <TextView
        android:id="@+id/txvBookDetailSynopsis"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:padding="6dp"
        tools:text="Synopsis"
        android:textSize="13sp"
        />

    <TextView
        android:id="@+id/txvLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Location"
        android:textSize="20dp"
        android:textAlignment="center"/>

    <Button
        android:id="@+id/btnBookDetailRequest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="60dp"
        android:backgroundTint="@color/teal_200"
        android:textColor="@color/black"
        android:text="Request"
        />
</LinearLayout>